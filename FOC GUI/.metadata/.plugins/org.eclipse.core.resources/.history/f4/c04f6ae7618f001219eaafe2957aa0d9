import javax.swing.*;

import java.awt.Color;
import java.awt.Font;
import java.awt.event.*;
import java.awt.*;


/**
 * This class creates a JFrame to display Homepage profile for a user when they log in.
 * @author Kelly Brown, David Snellings, Brent Steffey
 */

@SuppressWarnings("serial")
public class HomePage  extends JFrame{

	public void start(){
		pack();
		setVisible(true);
		initComponents();
		setSize(1025,725);
		this.setTitle("FOC_DB");
		JTabbedPane();
	}

	/**
	 * This initializes the JFrame 
	 * @param 
	 */
	
	private void initComponents(){
	
		JPanel panel = new JPanel();
		panel.setLayout(null);
		panel.setBackground(Color.LIGHT_GRAY);   
		add(panel);
		setSize(1025,725);
		setDefaultCloseOperation(EXIT_ON_CLOSE);
	}
	/**
	 * @author javabeginner.com
	 * @description The tabbed template was gotten from javabeginner.com.
	 */
	public void JTabbedPane() {
		ImageIcon icon = new ImageIcon("java-swing-tutorial.JPG");
		JTabbedPane jtbExample = new JTabbedPane();
		JPanel jplInnerPanel1 = createInnerPanelHome();
		jtbExample.addTab("Home", icon, jplInnerPanel1, "Home Page");
		//jtbExample.setSelectedIndex(0);
		JPanel jplInnerPanel2 = createInnerPanelCommittee();
		jtbExample.addTab("Committees", icon, jplInnerPanel2,"Commitees");
		JPanel jplInnerPanel3 = createInnerPanelFaculty();
		jtbExample.addTab("Faculty", icon, jplInnerPanel3, "Faculty");
		//setLayout(new GridLayout(1, 1));
		add(jtbExample);
	}
	/**
	 * @author javabeginner.com
	 * @description Some of the tabbed template was gotten from javabeginner.com
	 */
	protected JPanel createInnerPanelHome() {
		JPanel panel = new JPanel();
		panel.setLayout(null);
		panel.setBackground(Color.LIGHT_GRAY);   
		add(panel);
		setSize(950,725);
		setDefaultCloseOperation(EXIT_ON_CLOSE);
		
		JButton close = new JButton("Exit System");
		close.setBounds(800,0,125,30);
		close.addActionListener(new ActionListener()
		{
			public void actionPerformed(ActionEvent ae)
			{
				dispose();
			}
		});;
		panel.add(close);
		
		findMembers = new JButton("Find Members");
		findMembers.setBounds(20,20,130,45);
		Font f = new Font("SansSerif", Font.BOLD, 12);
		findMembers.setFont(f);
		findMembers.addActionListener(new ActionListener()
		{
			public void actionPerformed(ActionEvent ae)
			{
				//have to access database
			}
		});;
		panel.add(findMembers);
		
		JTextArea results = new JTextArea("");
		results.setBounds(20,80,700,700);
		results.append("All eligible members will be displayed here.");
		panel.add(results);
		return panel;
	}
	
	protected JPanel createInnerPanelCommittee() {
		final JPanel panel = new JPanel();
		panel.setLayout(null);
		panel.setBackground(Color.LIGHT_GRAY);   
		add(panel);
		setSize(950,725);
		
		JButton close = new JButton("Exit System");
		close.setBounds(800,0,125,30);
		close.addActionListener(new ActionListener()
		{
			public void actionPerformed(ActionEvent ae)
			{
				dispose();
			}
		});;
		panel.add(close);
		
		Font f = new Font("SansSerif", Font.BOLD, 15);
		
		
		JLabel comNameDesc = new JLabel("Please enter the name of the committee you wish to search/update.");
		comNameDesc.setBounds(10,20,700,50);
		comNameDesc.setFont(f);
		comNameDesc.setForeground(Color.red);
		panel.add(comNameDesc);
		
		JLabel comNameDesc2 = new JLabel("Name:");
		comNameDesc2.setBounds(10,45,400,50);
		panel.add(comNameDesc2);
		
		committeeName = new JTextField();
		committeeName.setBounds(50,60,430,20);
		panel.add(committeeName);
		
		JButton enter = new JButton("Enter");
		enter.setBounds(355,85,100,20);
		enter.addActionListener(new ActionListener()
		{
			public void actionPerformed(ActionEvent ae)
			{
				myCommittee.start();
			}
		});;
		panel.add(enter);
		
		return panel;
	}
	protected JPanel createInnerPanelFaculty() {
		final JPanel panel = new JPanel();
		panel.setLayout(null);
		panel.setBackground(Color.LIGHT_GRAY);   
		add(panel);
		setSize(950,725);
		
		JButton close = new JButton("Exit System");
		close.setBounds(800,0,125,30);
		close.addActionListener(new ActionListener()
		{
			public void actionPerformed(ActionEvent ae)
			{
				dispose();
			}
		});;
		panel.add(close);
			
		Font f = new Font("SansSerif", Font.BOLD, 15);
		
		
		JLabel facNameDesc = new JLabel("Please enter the name of the faculty you wish to search/update.");
		facNameDesc.setBounds(10,20,700,50);
		facNameDesc.setFont(f);
		facNameDesc.setForeground(Color.red);
		panel.add(facNameDesc);
		
		JLabel facNameDesc2 = new JLabel("Name:");
		facNameDesc2.setBounds(10,45,400,50);
		panel.add(facNameDesc2);
		
		facultyName = new JTextField();
		facultyName.setBounds(50,60,405,20);
		panel.add(facultyName);
		
		JButton enter = new JButton("Enter");
		enter.setBounds(355,85,100,20);
		enter.addActionListener(new ActionListener()
		{
			public void actionPerformed(ActionEvent ae)
			{
				myFaculty.start(facultyName.getText());
			}
		});;
		panel.add(enter);
		
		
		return panel;
	}

	//data members
	private JButton findMembers;
	private JTextField committeeName, facultyName;
	private FacultyPage myFaculty = new FacultyPage();
	private CommitteePage myCommittee = new CommitteePage();
}
